@using IsBulmaProject.Models
@model Ilan

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">İlana başvurmak için CV ekleyiniz.</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="yuklenecekDosya" class="form-label">Dosya Seç</label>
                            <input type="file" class="form-control" name="yuklenecekDosya" id="yuklenecekDosya" accept=".pdf,.doc,.docx" required>
                        </div>
                        <input type="hidden" name="ilanId" value="@Model.ilanId" />
                        <button type="submit" class="btn btn-primary">Yükle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
