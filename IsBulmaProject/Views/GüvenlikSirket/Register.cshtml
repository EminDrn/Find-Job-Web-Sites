
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Shared/css/styles.css" rel="stylesheet" />
</head>

<div class="container">
    <h2 class="my-4">Şirket  Kayıt Formu</h2>
    <form action="/GüvenlikSirket/Register" method="post">
        <div class="mb-3">
            <label for="isVerenSirketAdi" class="form-label">Şirket Adı</label>
            <input type="text" class="form-control" id="isVerenSirketAdi" name="isVerenSirketAdi" required>
        </div>
        <div class="mb-3">
            <label for="isVerenMail" class="form-label">Şirket Mail Adresi</label>
            <input type="text" class="form-control" id="isVerenMail" name="isVerenMail" required>
        </div>
        <div class="mb-3">
            <label for="isVerenIl" class="form-label">Şirketin Bulunduğu İl</label>
            <input type="text" class="form-control" id="isVerenIl" name="isVerenIl" required>
        </div>
        <div class="mb-3">
            <label for="isVerenIlce" class="form-label">Şirketin Bulunduğu İlçe</label>
            <input type="text" class="form-control" id="isVerenIlce" name="isVerenIlce" required>
        </div>
        <div class="mb-3">
            <label for="isVerenTelNo" class="form-label">Telefon</label>
            <input type="tel" class="form-control" id="isVerenTelNo" name="isVerenTelNo" required>
        </div>
        <div class="mb-3">
            <label for="isVerenVergiNo" class="form-label">Vergi Numarası</label>
            <input type="number" class="form-control" id="isVerenVergiNo" name="isVerenVergiNo" required>
        </div>
        <div class="mb-3">
            <label for="isVerenPassword" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="isVerenPassword" name="isVerenPassword" required>
        </div>

        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>
</div>