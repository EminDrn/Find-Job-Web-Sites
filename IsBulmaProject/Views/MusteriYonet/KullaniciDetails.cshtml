@model IsBulmaProject.Models.Kullanici
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-3">
            <!-- Profil Fotoğrafı -->
            <img src="~/Shared/assets/kullanici.jpeg" class="img-fluid rounded-circle mb-3" alt="Kullanıcı Resmi">
        </div>
        <div class="col-lg-9">
            <!-- Kullanıcı Bilgileri -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="mb-3">@Model.KullaniciAdi @Model.kullaniciSoyadi </h1>
                        <a href="/MusteriYonet/KullaniciGuncelle/@Model.KullaniciID" class="btn btn-outline-primary">Güncelle</a>
                    </div>
                    <div>
                        <p><strong>Doğum Tarihi:</strong> @Model.dogumTarihi</p>
                        <p><strong>Yaşadığı Şehir:</strong> @Model.sehir</p>
                        <p><strong>Telefon Numarası:</strong> @Model.telefon</p>
                        <p><strong>Mail Adresi:</strong> @Model.Mail</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Ürün Detayları -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h3>Kullanıcı Detayları</h3>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td>@Model.kullaniciOzet</td>
                                </tr>
                                <!-- Diğer ürün detayları satırları -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>